<div class="container">
    <div class="row">
        <form action="<%=create_question_path%>">
            <div class="col s12">
                <span style="color: gray">Title:</span>
                <input type="text" name="title" value="<%= question.title %>">
            </div>
            <div class="col s12">
              <span style="color: gray">Content:</span>
                <input type="text" name="content" value="<%= question.content %>">
            </div>
            <div class="col s12">
                <span style="color: gray">SubId:</span>
                <input type="text" name="subId" value="<%= question.subId %>">
            </div>
            <div class="col s12">
                <span style="color: gray">UserId:</span>
                <input type="text" name="userId" value="<%= question.userId %>">
            </div>
            <div class="col s12">
                <span style="color: gray">GroupId:</span>
                <input type="text" name="groupId" value="<%= question.groupId %>" required>
            </div>
            <div class="col s12 center">
                <input type="submit" name="Submit" class="btn btn-info">
            </div>
        </form>
    </div>
</div>
