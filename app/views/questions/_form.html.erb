<div class="container">
    <div class="row">
        <form action="<%=update_question_path%>">
            <div class="col s12">
                <span style="color: gray">Title:</span>
                <input type="text" name="title" value="<%= question.title %>">
            </div>
            <div class="col s12">
              <span style="color: gray">Content:</span>
                <input type="text" name="content" value="<%= question.content %>">
            </div>
            <div class="col s12">
                <input type="hidden" name="id" value="<%= question.quesId %>">
            </div>
            <div class="col s12 center">
                <input type="submit" name="Submit" class="btn btn-info">
            </div>
        </form>
    </div>
</div>
