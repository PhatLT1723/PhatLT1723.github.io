<div class="container">
    <div class="row">
        <form action="<%=update_user_path%>">
            <div class="col s12">
                <span style="color: gray">Display Name:</span>
                <input type="text" name="displayName" value="<%= user.displayName %>">
            </div>
            <div class="col s12">
              <span style="color: gray">Role:</span>
                <input type="text" name="roleId" value="<%= user.roleId %>">
            </div>
            <div class="col s12">
              <span style="color: gray">Total Points:</span>
                <input type="text" name="totalPoints" value="<%= user.totalPoints %>">
            </div>
            <div class="col s12">
                <input type="hidden" name="id" value="<%= user.userId %>">
            </div>
            <div class="col s12 center">
                <input type="submit" name="Submit" class="btn btn-info">
            </div>
        </form>
    </div>
</div>
